<div class="container-fluid">
	<div id="login-panel" class="content bg-white login-wrapper">		
		<h1>Sign Up</h1>
		<br>
		<%= form_for @user do |f|%>
		  <%= f.label :username%><br>
		  <%= f.text_field :username, :required => true%><br>
		  <%= f.label :password%><br>
		  <%= f.password_field :password, :required => true%><br>
		  <%= f.submit %>
		<%end%>
	</div>
</div>
